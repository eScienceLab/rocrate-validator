@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ro-crate: <https://github.com/crs4/rocrate-validator/profiles/ro-crate/> .
@prefix schema1: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ro-crate:RootDataEntity a sh:NodeShape ;
    sh:closed false ;
    sh:description "Root Data Entity properties defined as MUST" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:name "WROC Root Data Entity Required Properties" ;
    sh:property [ sh:description "The Crate must specify a license" ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "Crate license" ;
            sh:or ( [ sh:datatype xsd:anyURI ;
                        sh:nodeKind sh:Literal ] [ sh:datatype xsd:string ;
                        sh:nodeKind sh:Literal ] ) ;
            sh:order 1 ;
            sh:path schema1:license ],
        [ sh:class schema1:CreativeWork ;
            sh:description "Check if the Main Workflow is specified through a `mainEntity` property in the root data entity" ;
            sh:maxCount 1 ;
            sh:message "The Main Workflow must be specified through a `mainEntity` property in the root data entity"^^xsd:string ;
            sh:minCount 1 ;
            sh:name "Main Workflow entity existence" ;
            sh:nodeKind sh:BlankNodeOrIRI ;
            sh:order 0 ;
            sh:path schema1:mainEntity ] ;
    sh:targetClass ro-crate:RootDataEntity .

schema1:CreativeWork a sh:NodeShape ;
    sh:closed false ;
    sh:ignoredProperties ( rdf:type ),
        ( rdf:type ) ;
    sh:targetClass schema1:CreativeWork .


